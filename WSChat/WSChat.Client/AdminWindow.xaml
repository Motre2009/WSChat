<Window x:Class="WSChat.Client.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="500" Width="360"
        WindowStartupLocation="CenterOwner" Background="#111">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Button x:Name="RefreshBtn" Content="Refresh"
                    Click="RefreshButton_Click"
                    Background="DarkBlue" Foreground="White" Width="80"/>

            <TextBox x:Name="SearchBox" Width="180" Margin="8,0,0,0"
                     Text="Search..." Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"
                     TextChanged="SearchBox_TextChanged"/>
        </StackPanel>

        <ListBox x:Name="UsersList" Grid.Row="1"
                 Background="#1b1b1b" Foreground="White"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <TextBox x:Name="BanMinutesBox" Width="80" Text="60" Margin="0,0,8,0"/>
            <Button x:Name="BanBtn" Content="Ban" Width="80"
                    Click="BanButton_Click"
                    Background="DarkRed" Foreground="White"/>
            <Button x:Name="DeleteBtn" Content="Delete"
                    Width="80" Margin="8,0,0,0"
                    Background="DarkRed" Foreground="White"
                    Click="DeleteButton_Click"/>
        </StackPanel>

        <GroupBox Header="Censorship Warnings"
                  Grid.Row="3" Foreground="White" Margin="0,10,0,0">
            <ListBox x:Name="CensorList"
                     Background="#222" Foreground="Orange"/>
        </GroupBox>

    </Grid>
</Window>
