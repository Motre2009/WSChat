<Window x:Class="WSChat.Client.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WSChat"
        Height="400" Width="800"
        Background="Black">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="8" Background="Black" Padding="8" Margin="0,0,0,8" BorderBrush="#d0d4db" BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Room:" VerticalAlignment="Center" Foreground="BlueViolet" FontWeight="Bold" Margin="0,0,6,0"/>
                <ComboBox x:Name="RoomsCombo" Width="160" Margin="0,0,8,0" Background="AliceBlue"/>
                <Button x:Name="JoinButton" Content="Join" Width="70" Margin="0,0,6,0" Background="BlueViolet" Foreground="White" Click="JoinButton_Click"/>
                <Button x:Name="LeaveButton" Content="Leave" Width="70" Margin="0,0,10,0" Background="BlueViolet" Foreground="White" Click="LeaveButton_Click"/>
                <TextBox x:Name="CreateRoomBox" Width="140" Margin="0,0,6,0"
                         Text="new room" Background="AliceBlue" Foreground="Gray"
                         GotFocus="CreateRoomBox_GotFocus" LostFocus="CreateRoomBox_LostFocus"/>
                <Button Content="Create" Width="70" Margin="0,0,10,0" Background="BlueViolet" Foreground="White" Click="CreateButton_Click"/>
                <Button Content="Who" Width="60" Click="WhoButton_Click" Background="BlueViolet" Foreground="White" Margin="0,0,8,0"/>
                <Button x:Name="AdminButton" Content="Admin" Width="80" Margin="0,0,8,0"
                        Background="DarkRed" Foreground="White" Click="AdminButton_Click" Visibility="Collapsed"/>
                <TextBlock x:Name="CurrentRoomText" Text="Current: General"
                           VerticalAlignment="Center" FontWeight="Bold" Foreground="BlueViolet"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" CornerRadius="8" Background="Black" BorderBrush="White" BorderThickness="3" Padding="6">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="MessageList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="4" CornerRadius="10" MaxWidth="500">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#e8e8e8"/>
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMine}" Value="True">
                                                <Setter Property="Background" Value="#cde8ff"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <StackPanel>
                                    <TextBlock Text="{Binding User}"
                                               FontWeight="Bold"
                                               Foreground="#0078d7"
                                               Margin="0,0,0,2"/>
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               Foreground="#222"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" CornerRadius="8" Background="White" Padding="8" Margin="0,8,0,0" BorderBrush="White" BorderThickness="1">
            <DockPanel>
                <TextBox x:Name="InputBox"
                         Width="650"
                         DockPanel.Dock="Left"
                         Height="40"
                         VerticalContentAlignment="Center"
                         FontSize="14"
                         Margin="0,0,8,0"
                         Foreground="White"
                         Background="Black"
                         BorderThickness="1"
                         TextWrapping="Wrap"
                         KeyDown="InputBox_KeyDown"/>
                <Button x:Name="SendButton"
                        Content="Send"
                        Width="100"
                        Height="40"
                        DockPanel.Dock="Right"
                        Background="DarkBlue"
                        Foreground="White"
                        BorderBrush="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Right"
                        Click="SendButton_Click"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
